    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "riot-route": "^3.1.2"
  },
  "devDependencies": {
    "@types/jest": "^21.1.9",
    "@types/node": "^9.3.0",
    "@types/react": "^16.0.40",
    "@types/react-dom": "^15.5.7",
    "clean-webpack-plugin": "^0.1.19",
    "cross-env": "5.1.1",
    "jest": "^22.0.4",
    "parallel-webpack": "^2.3.0",
    "stats-webpack-plugin": "^0.6.2",
    "ts-jest": "^22.0.0",
    "ts-loader": "^4.0.1",
    "tslint": "^5.9.1",
    "typescript": "^2.6.0",
    "webpack": "^4.1.1",
