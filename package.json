{
  "name": "@sardonyxwt/ligui",
  "version": "1.0.3",
  "description": "Ligui UI",
  "keywords": [
    "sclib",
    "ligui",
    "ui"
  ],
  "license": "MIT",
  "author": "sardonyx.wt@gmail.com",
  "contributors": [
    "Kirill Petkov <sardonyx.wt@gmail.com>"
  ],
  "files": [
    "LICENSE",
    "README.md",
    "CHANGELOG.md",
    "dist/"
  ],
  "main": "dist/ligui.min.js",
  "typings": "dist/@types/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/sardonyxwt/ligui.git"
  },
  "scripts": {
    "build": "cross-env NODE_ENV='production' webpack -p",
    "test": "cross-env-shell webpack && jest",
    "lint": "tslint -p . -c tslint.json --fix -t verbose",
    "deploy": "cross-env-shell npm run build && npm publish --access public"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "\\.(ts|tsx)$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "mapCoverage": true,
    "testRegex": "/(test|src)/.*\\.(test|spec)\\.(ts|js)$"
  },
  "dependencies": {
    "@sardonyxwt/state-store": "^2.1.3",
    "@sardonyxwt/utils": "^1.5.0",
    "path-to-regexp": "^2.1.0",
    "preact": "^8.2.7",
    "preact-compat": "^3.17.0",
    "preact-render-to-string": "^3.7.0"
  },
  "devDependencies": {
    "@types/jest": "^21.1.9",
    "@types/node": "^9.3.0",
    "clean-webpack-plugin": "0.1.17",
    "cross-env": "5.1.1",
    "jest": "^22.0.4",
    "ts-jest": "^22.0.0",
    "ts-loader": "^3.2.0",
    "tslint": "^5.9.1",
    "tslint-loader": "^3.5.3",
    "typescript": "^2.6.0",
    "webpack": "^3.6.0",
    "webpack-bundle-analyzer": "^2.9.1"
  }
}
