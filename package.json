    "LICENSE",
    "README.md",
    "CHANGELOG.md",
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/sardonyxwt/ligui.git"
  },
  "sideEffects": false,
  "scripts": {
    "build": "webpack --mode production",
    "test": "cross-env-shell webpack && jest",
    "lint": "tslint -p . -c tslint.json --fix -t verbose",
    "deploy": "cross-env-shell npm run build && npm publish --access public"
